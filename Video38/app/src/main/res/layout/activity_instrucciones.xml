<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/InstruccionesActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstruccionesActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/InstruccionesActivity_TextView_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instrucciones"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:id="@+id/InstruccionesActivity_TextView_Explicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presiona regresar para volver al inicio, o siguiente para ir a la otra Activity"
        android:textSize="25sp"
        android:layout_marginTop="47dp"
        android:layout_below="@id/InstruccionesActivity_TextView_Titulo"
        >
    </TextView>

    <Button
        android:id="@+id/InstruccionesActivity_Button_Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick">
    </Button>

    <Button
        android:id="@+id/InstruccionesActivity_Button_Regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/InstruccionesActivity_Button_Siguiente"
        android:onClick="onClick">
    </Button>

</RelativeLayout>